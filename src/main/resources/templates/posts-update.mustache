{{>layout/header}}

<h3 style="text-align: center;">게 시 글 수 정</h3>

<div class="div-flex">
    <div class="content-template">
        <form method="POST" id="fileForm" enctype="multipart/form-data">
            <div class="form-group" style="display:none">
                <label for="title">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title" class="label-text">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}" >
            </div>
            <div class="form-group" style="display:none">
                <label for="author" class="label-text"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{post.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="type"  class="label-text"> 연계 타입 </label>
                <select name="type" class="form-control" id="type">
                    <option value="HUB" selected="selected">HUB</option>
                    <option value="AGENT">AGENT</option>
                    <option value="WEBCONSOLE" >WEBCONSOLE</option>
                    <option value="ETC" >기타</option>
                </select>
            </div>
            <div class="form-group">
                <label for="pattern" class="label-text"> 연계 패턴 </label>
                <select name="pattern" class="form-control" id="pattern">
                    <option value="DB" selected="selected">DB연계</option>
                    <option value="FILE">FILE연계</option>
                    <option value="APP" >응용연계</option>
                    <option value="ETC" >기타</option>
                </select>
            </div>
            <div class="form-group">
                <textarea class="form-control" id="summernote" name="content" style= "height:420px;">{{post.content}}</textarea>
            </div>
            <div class="custom-file" id="inputFile">
                <input name="uploadFile" type="file" class="custom-file-input" id="uploadFile" multiple>
            </div>
        </form>
        <div class="btn-group btn-group-justified" role="group" aria-label="..." style="width:100%">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="btn-update">수정</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="btn-delete">삭제</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="btn-cancel">취소</button>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}}