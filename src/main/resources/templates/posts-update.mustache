{{>layout/header}}

<h3 style="text-align: center;">게 시 글 수 정</h3>

<div class="col-md-12">
    <div class="col-md-10">
        <form method="POST" id="fileForm" enctype="multipart/form-data">
            <div class="form-group" style="display:none">
                <label for="title">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}" >
            </div>
            <div class="form-group" style="display:none">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{post.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="author"> 글 타입 </label>
                <select name="type" class="form-control" id="type">
                    <option value="ecross" selected="selected">eCross 제품</option>
                    <option value="etc">기타</option>
                </select>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="summernote" name="content" style= "height:420px;" placeholder="내용을 입력하세요" >{{post.content}}</textarea>
            </div>
            <div class="custom-file" id="inputFile">
                <input name="uploadFile" type="file" class="custom-file-input" id="uploadFile" multiple>
                <label class="custom-file-label" for="customFile">파일을 선택해 주세요.</label>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-outline-danger">취소</a>
        <button type="button" class="btn btn-outline-primary" id="btn-update">수정</button>
        <button type="button" class="btn btn-outline-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}