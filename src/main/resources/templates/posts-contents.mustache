{{>layout/header}}

<h3 style="text-align: center;">게 시 글</h3>

<div class="div-flex">
    <div class="content-template">
        <form>
            <div class="form-group" style="display:none">
                <label for="title">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title" class="label-text">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}" readonly>
            </div>
            <div class="form-group" style="display:none">
                <label for="author" class="label-text"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{post.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="type" class="label-text"> 제품군 </label>
                <input type="text" class="form-control" id="type" value="{{post.type}}" readonly>
            </div>
            <div class="form-group">
                <label for="pattern" class="label-text"> 카테고리 </label>
                <input type="text" class="form-control" id="pattern" value="{{post.pattern}}" readonly>
            </div>
            <div class="form-group">
                <textarea class="form-control" id="summernote" name="content" >{{post.content}}</textarea>
            </div>
            {{#post.fileId}}
                <div  class="form-group">
                    <strong>첨부파일 :  </strong>
                    <a href="/download/{{post.fileId}}" role="button" id="btn_download">{{post.filename}}</a>
                </div>
            {{/post.fileId}}
            {{^post.fileId}}
                <div  class="form-group">
                    <strong>첨부파일 : </strong>
                </div>
            {{/post.fileId}}
        </form>
        {{#same}}
            <div class="btn-group btn-group-justified btn-padding" role="group" aria-label="..." style="width:100%">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="btn-update-page">수정</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="btn-delete">삭제</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="btn-cancel">취소</button>
                </div>
            </div>
        {{/same}}
        {{^same}}
            <div class="btn-group btn-group-justified btn-padding" role="group" aria-label="..." style="width:100%">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="btn-update-page" disabled>수정</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="btn-delete" disabled>삭제</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" id="btn-cancel">취소</button>
                </div>
            </div>
        {{/same}}
        <!--
        21-01-22 댓글 추가 진행중
        -->
        <div class="comments-container">
            <label for="commentsContent">댓 글</label>
            <form name="commentsForm">
                <div class="input-group">
                    <input type="hidden" name="postId" value={{post.id}}/>
                    <input type="text" class="form-control" id="commentsContent" name="commentsContent" placeholder="내용을 입력하세요.">
                    <span class="input-group-btn">
                    <button class="form-control" type="button" id="btn-comments-save" name="btn-comments-save">등록</button>
               </span>
                </div>
            </form>
        </div>
        <div class="commentsList-container">
            <div class="commentsList"></div>
        </div>
    </div>


</div>

<script>
    $(document).ready(function() {
        $('#summernote').summernote('disable');
    });
</script>

{{>layout/footer}}